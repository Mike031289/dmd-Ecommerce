{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <h1 class="mb-4 fw-bold d-flex align-items-center gap-3">
            <i data-feather="shopping-cart" class="text-accent"></i>
            Mon panier
        </h1>

        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-gradient-dark text-white fw-bold py-3">
                <i data-feather="list" class="me-2"></i>
                Liste des produits ajoutés
            </div>

            <div class="card-body">
                <div class="row g-4">
                    <!-- Liste des produits -->
                    <div class="col-12 col-lg-8">
                        {% for product in cart %}
                            <div class="card border-0 shadow-sm mb-4 rounded-3">
                                <div class="row g-0 align-items-center">
                                    <!-- Image produit -->
                                    <div class="col-12 col-sm-4 col-md-3">
                                        <img src="/uploads/{{ product.object.illustration }}" class="img-fluid rounded-start w-100 product-img" alt="{{ product.object.name }}"></div>

                                        <!-- Infos produit -->
                                        <div class="col-12 col-sm-8 col-md-9">
                                            <div class="card-body">
                                                <h5 class="fw-bold text-dark mb-2">
                                                    {{ product.object.name }}
                                                </h5>

                                                <p class="mb-1">
                                                    <small class="text-muted">
                                                        Prix unitaire :
                                                        {{ product.object._getPriceWt|price }}
                                                    </small>
                                                </p>

                                                <div class="d-flex align-items-center gap-2 mb-2">
                                                    <small>
                                                        Quantité :
                                                    </small>
                                                    <a href="{{ path('app_cart_decrease', { 'id': product.object.id } ) }}" class="btn btn-light border btn-sm rounded-circle fw-bold">
                                                        <i data-feather="minus"></i>
                                                    </a>
                                                    <span class="badge bg-dark fs-6 px-3 py-2">
                                                        {{ product.qty }}
                                                    </span>
                                                    <a href="{{ path('app_cart_add', { 'id': product.object.id } ) }}" class="btn btn-light border btn-sm rounded-circle fw-bold">
                                                        <i data-feather="plus"></i>
                                                    </a>
                                                </div>

                                                <div>
                                                    <strong>
                                                        Prix total :
                                                    </strong>
                                                    <span class="text-accent fw-bold fs-5">
                                                        {{ (product.qty * product.object._getPriceWt)|price }}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        <!-- Récapitulatif panier -->
                        <div class="col-12 col-lg-4">
                            <div class="card border-0 shadow-sm rounded-3">
                                <div class="card-body">
                                    <h4 class="fw-bold text-dark mb-3 d-flex align-items-center gap-2">
                                        <i data-feather="file-text"></i>
                                        Récapitulatif
                                    </h4>

                                    <ul class="list-group list-group-flush mb-3">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>
                                                Total produits :
                                            </span>
                                            <span class="badge bg-dark fs-6">
                                                {{ fullCartQuantity }}
                                            </span>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>
                                                Prix total T.T.C :
                                            </span>
                                            <span class="text-accent fw-bold fs-5">
                                                {{ totalWt|price }}
                                            </span>
                                        </li>
                                    </ul>

                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_cart_remove') }}" class="btn btn-outline-danger w-50 d-flex align-items-center justify-content-center gap-1">
                                            <i data-feather="trash-2"></i>
                                            Vider
                                        </a>
                                        <a href="{{ path('app_order') }}" class="btn btn-dark w-50 d-flex align-items-center justify-content-center gap-1">
                                            <i data-feather="check-circle"></i>
                                            Commander
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    {% endblock %}
    

