{% extends 'base.html.twig' %}
{% block body %}
    <div class="container my-5">
        <!-- Fil d'Ariane -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="text-dark fw-semibold" href="{{ path('app_category', {'slug': product.category.slug }) }}">
                        {{ product.category.name }}
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    {{ product.name }}
                </li>
            </ol>
        </nav>
        <div class="row g-4">
            <!-- Image produit -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <img src="/uploads/{{ product.illustration }}" class="card-img-top img-fluid" alt="{{ product.name }}"></div>
                </div>
                <!-- Description produit (centrÃ©e verticalement) -->
                <div class="col-md-6 d-flex align-items-center">
                    <div class="card border-0 shadow-sm rounded-4 p-4 w-100">
                        <h1 class="fw-bold text-dark mb-3 text-center">
                            {{ product.name }}
                        </h1>
                        <!-- Prix -->
                        <h3 class="text-accent fw-bold mb-4 text-center">
                            {{ product._getPriceWt|price }}
                        </h3>
                        <!-- Description -->
                        <p class="text-muted mb-4 text-center">
                            {{ product.description|raw }}
                        </p>
                        <!-- Bouton Ajouter au panier -->
                        <a href="{{ path('app_cart_add', { 'id': product.id }) }}" class="btn btn-dark w-100 d-flex align-items-center justify-content-center gap-2 py-3 fs-5 rounded-3">
                            <i data-feather="shopping-cart"></i>
                            Ajouter au panier
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
    

    
